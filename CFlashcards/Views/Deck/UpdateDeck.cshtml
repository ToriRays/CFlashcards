@model Deck

@section Styles{
    <link rel="stylesheet" href="~/css/style.css" />
}

<section class="deck-form">
    <h1 class="fs-2 mx-3 mb-5">Update Deck</h1>
    <form asp-action="UpdateDeck" class="mx-4">
        <input type="hidden" asp-for="DeckId" />
        <input type="hidden" asp-for="FlashcardUserId" />
        <div class="form-group">
            <label asp-for="Title"></label><span class="text-danger">*</span>
            <input asp-for="Title" class="form-control mt-2 mb-3" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control  mt-2 mb-3" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-4 m-2">Save</button>
        <a asp-action="BrowseDecks" class="btn btn-secondary mt-4 m-2">Cancel</a>
    </form>
</section>