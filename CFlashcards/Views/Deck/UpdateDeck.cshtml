@model Deck

<h2>Update Deck</h2>

<form asp-action="UpdateDeck">
    <input type="hidden" asp-for="DeckId" />
    <input type="hidden" asp-for="FlashcardUserId" />
    <div class="form-group">
        <label asp-for="Title"></label><span class="text-danger">*</span>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="BrowseDecks" class="btn btn-secondary">Cancel</a>
</form>