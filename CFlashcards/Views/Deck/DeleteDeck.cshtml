@model Deck

@section Styles{
    <link rel="stylesheet" href="~/css/style.css" />
}

<section>
    <h1 class=" fs-2 mx-3 mb-5">Delete Deck</h1>
    <p class="font-weight-bold mx-4">Are you sure you want to delete this deck?</p>
    <p class="font-weight-bold mx-4">The cards inside this deck will be deleted as well!</p>
</section>

<section>
    <h2 class=" fs-4 mx-3 mt-5">Item</h2>
    <hr />
    <dl class="row mx-4">
        <dt class="col-sm-2">Deck Id</dt>
        <dd class="col-sm-10">@Model.DeckId</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Flashcard User Id</dt>
        <dd class="col-sm-10">@Model.FlashcardUserId</dd>
    </dl>

    <form asp-action="DeleteDeckConfirmed" asp-route-id="@Model.DeckId" method="post" class="mx-4">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="BrowseDecks" class="btn btn-secondary">Cancel</a>
    </form>
</section>