@model Deck

@section Styles{
    <link rel="stylesheet" href="~/css/style.css" />
}

<section class="center-container">
    <h1 class=" fs-2 mx-4 mb-5">Delete Deck</h1>
    <p class="font-weight-bold mx-4">Are you sure you want to delete this deck?</p>
    <p class="font-weight-bold mx-4">The cards inside this deck will be deleted as well!</p>
</section>

<section class="center-container">
    @* <h2 class=" fs-4 mx-3 mt-5">Item</h2> *@
    @* <hr /> *@
    <dl class ="deck-info row">
        <div class="info-pair">
            <dt class="col-xl-5 col-lg-6 col-md-7 col-sm-8 col-10 custom-dt">Title</dt>
            <dd class="col-xl-8 col-lg-9 col-md-10 col-sm-10 col-10">@Model.Title</dd>
        </div>
    </dl>
    <dl class ="deck-info row">
        <div class="info-pair">
            <dt class="col-xl-5 col-lg-6 col-md-7 col-sm-8 col-10 custom-dt">Description</dt>
            <dd class="col-xl-8 col-lg-9 col-md-10 col-sm-10 col-10">@Model.Description</dd>
        </div>
    </dl>

    <form asp-action="DeleteDeckConfirmed" asp-route-id="@Model.DeckId" method="post" class="mx-4">
        <button type="submit" class="btn btn-danger mx-3 mt-5">Delete</button>
        <a asp-action="BrowseDecks" class="btn btn-secondary mt-5">Cancel</a>
    </form>
</section>