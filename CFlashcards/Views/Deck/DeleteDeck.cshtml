@model Deck

<h2>Delete Deck</h2>

<h3>Are you sure you want to delete this deck? The cards inside this deck will be deleted as well!</h3>
<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Deck Id</dt>
        <dd class="col-sm-10">@Model.DeckId</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Flashcard User Id</dt>
        <dd class="col-sm-10">@Model.FlashcardUserId</dd>
    </dl>

    <form asp-action="DeleteDeckConfirmed" asp-route-id="@Model.DeckId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Browse" class="btn btn-secondary">Cancel</a>
    </form>
</div>