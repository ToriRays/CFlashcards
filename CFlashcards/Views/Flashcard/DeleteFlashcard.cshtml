@model Flashcard

<h2>Delete Item</h2>

<h3>Are you sure you want to delete this flashcard?</h3>
<div>
    <h4>Flashcard</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Question</dt>
        <dd class="col-sm-10">@Model.Question</dd>

        <dt class="col-sm-2">Answer</dt>
        <dd class="col-sm-10">@Model.Answer</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
    </dl>
    <form asp-action="DeleteFlashcardConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.FlashcardId" />
        <input type="hidden" name="deckId" value="@Model.DeckId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-route-id="@Model.FlashcardId" class="btn btn-secondary">Cancel</a>
    </form>
</div>