@model Flashcard

<h2>Create a New Flashcard!</h2>

<p>Aditional data: @ViewBag.AdditionalData</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="CreateFlashcard">
    <input type="hidden" asp-for="DeckId" value="@ViewBag.AdditionalData" />
    <div class="form-group">
        <label asp-for="Question"></label><span class="text-danger">*</span>
        <input asp-for="Question" class="form-control" />
        <span asp-validation-for="Question" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Answer"></label><span class="text-danger">*</span>
        <input asp-for="Answer" class="form-control" />
        <span asp-validation-for="Answer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <input asp-for="Notes" class="form-control" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <p>Aditional data: @ViewBag.AdditionalData</p>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
<form asp-controller="Deck" asp-action="Carousel" method="get">
    <input type="hidden" name="id" value="@ViewBag.AdditionalData" />
    <button type="submit" class="btn btn-primary">Cancel</button>
</form>