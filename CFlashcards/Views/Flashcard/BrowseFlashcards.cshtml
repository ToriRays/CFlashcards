@model PaginatedFlashcardsViewModel


@section Styles{
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="~/css/test.css" rel="stylesheet" />
    <link href="~/css/carouselstyle.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" rel="stylesheet">
}


@if (Model.Flashcards == null || !Model.Flashcards.Any()) //Check for flashcardlist being null to avoid warning
{
    <h5 class="card-title">It looks like this deck is empty. Go ahead and create some cards :).</h5>
}
else
{
    <div class="settings">
        <ul>
            <li class="list">
                <a href="#">
                    <span class="icon"><ion-icon name="language-outline"></ion-icon></span>
                    <span class="text">Language</span>
                    <span class="circle"></span>
                </a>
            </li>
            <li class="list">
                <a href="#">
                    <span class="icon"><ion-icon name="barcode-outline"></ion-icon></span>
                    <span class="text">Voice</span>
                    <span class="circle"></span>
                </a>
            </li>

            <li class="list">
                <a href="#">
                    <span class="icon"><ion-icon name="speedometer-outline"></ion-icon></span>
                    <span class="text">Speed</span>
                    <span class="circle"></span>
                </a>
            </li>
        </ul>


    </div>

    <div class="row row-cols-1 row-cols-md-2 g-4">

        @foreach (var flashcard in Model.Flashcards)
        {

            <div class="col">


                <div class="card text-center" style="width: 18rem;">

                    <div id="flashcardCarousel_@(flashcard.FlashcardId)" class="carousel slide" data-interval="false">



                        <div class="carousel-inner">

                            <div class="carousel-item active">

                                <p class="card-text">Question:@flashcard.Question</p>

                            </div>


                            <div class="carousel-item">


                                <p class="card-text">
                                    Answer: @flashcard.Answer
                                </p>
                                <button class="btn btn-primary speech-button-answer" data-answer="@flashcard.Answer">
                                    <i class="fas fa-volume-up"></i>
                                </button>


                            </div>

                            <div class="carousel-item">

                                <p class="card-text">Notes:@flashcard.Notes</p>


                            </div>
                        </div>


                        <a class="carousel-control-prev" href="#flashcardCarousel_@(flashcard.FlashcardId)" role="button" data-bs-slide="prev" style="color:black">
                            <span class="carousel-control-prev-icon" style="color:black" aria-hidden="true"></span>
                            <span class="sr-only" style="font-size: 4vw">&lsaquo;</span>
                        </a>
                        <a class="carousel-control-next" href="#flashcardCarousel_@(flashcard.FlashcardId)" role="button" data-bs-slide="next" style="color:black">
                            <span class="carousel-control-next-icon" style="color:black" aria-hidden="true"></span>
                            <span class="sr-only" style=" font-size: 4vw">&rsaquo;</span>
                        </a>




                        <p>
                            <a class="btn btn-secondary" asp-controller="Flashcard" asp-action="Details" asp-route-id="@flashcard.FlashcardId">Inspect card</a>
                        </p>


                    </div>



                </div>



            </div>


        }
    </div>
}

<br>
<br>
<a class="btn btn-primary" asp-controller="Deck" asp-action="BrowseDecks">Back to deck browsing.</a>

@if (Model.FlashcardsUserId != "demo")// Let the user create new flashcard only if the deck is not a demo deck.
{
    <form asp-controller="Flashcard" asp-action="CreateFlashcard" method="get">
        <input type="hidden" name="deckId" value="@Model.DeckId" />
        <button type="submit" class="btn btn-primary">Create Flashcard</button>
    </form>
}


@{
    var prevDisabled = !Model.Flashcards.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Flashcards.HasNextPage ? "disabled" : "";
}
<a asp-action="BrowseFlashcards" asp-route-deckId="@Model.DeckId" asp-route-pageNumber="@(Model.Flashcards.PageIndex-1)" class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="BrowseFlashcards" asp-route-deckId="@Model.DeckId"  asp-route-pageNumber="@(Model.Flashcards.PageIndex+1)" class="btn btn-default @nextDisabled">
    Next
</a>


@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/langdetect/1.0.8/langdetect.min.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="~/js/site.js" defer></script>
}


